{
  "name": "server",
  "version": "1.0.0",
  "description": "IoT Dashboard Backend - Express + MQTT Bridge + WebSocket Mock",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "npm run build && npm run start",
    "ws-mock": "ts-node src/services/webSocketMock.ts",
    "mqtt-bridge": "ts-node src/services/mqttBridge.ts",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "clean:build": "rm -rf dist",
    "clean:cache": "rm -rf node_modules/.cache",
    "clean:logs": "rm -rf logs/*.log",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "docker:build": "docker build -t iot-dashboard-server .",
    "docker:run": "docker run -p 3001:3001 --env-file .env iot-dashboard-server"
  },
  "dependencies": {
    "@types/helmet": "^0.0.48",
    "@types/morgan": "^1.9.10",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "mqtt": "^5.0.5",
    "uuid": "^9.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.9",
    "@types/uuid": "^9.0.3",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "keywords": [
    "iot",
    "mqtt",
    "esp32",
    "websocket",
    "express",
    "typescript"
  ],
  "author": "IoT Dashboard Team",
  "license": "MIT"
}
